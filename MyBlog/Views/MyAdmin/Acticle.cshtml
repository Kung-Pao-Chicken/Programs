@{
    ViewBag.Title = "Acticle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<link href="@Url.Content("~/Content/Scripts/umeditor/themes/default/css/umeditor.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Content/Scripts/umeditor/umeditor.min.js")"></script>
<script src="@Url.Content("~/Content/Scripts/umeditor/umeditor.config.js")"></script>
<script src="@Url.Content("~/Content/Scripts/umeditor/lang/zh-cn/zh-cn.js")"></script>

<h2 style="display:inline;">编辑文章->@ViewBag.ActicleTitle&nbsp;(<span id="acticleid">@ViewBag.ActicleID</span>)</h2><span style="margin-left:20px" class='listitemadd'><a id="save" href="#">保存</a></span>
<div class="attention">
    <h4 style="display:inline;color:red">注意：</h4>
    <span></span>
</div>

<script type="text/plain" id="myEditor" style="width:100%;max-height:730px;">
</script>
<script>
    var um = UM.getEditor('myEditor');
    $("#myEditor").html("@Html.Raw(ViewBag.ActicleContent)");
</script>
<script src="@Url.Content("~/Content/Scripts/Acticle.js")"></script>